doctype html
html(lang="zh-CN")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,minimum-scale=1,initial-scale=1,maximum-scale=2,viewport-fit=cover")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="renderer", content="webkit")
    title SimonAKing/Blog
    //- Less 文件将在这里引入，例如：
    //- link(rel="stylesheet", href="styles.less")
    //- 或者编译后的 CSS 文件：
    link(rel="stylesheet", href="/css/blog.css")
  body
    //- 动态背景
    .dynamic-bg
    .grid-bg

    //- 鼠标跟随光效
    #cursorGlow.cursor-glow

    //- 加载动画
    #loader.loader
      .loader-ring
      .loader-ring
      .loader-ring

    //- 侧边栏
    aside#sidebar.sidebar
      .profile-section
        .avatar-container
          .avatar-ring
          .avatar
            img(src="https://cdn.jsdelivr.net/gh/SimonAKing/images/blog/avatar.jpg", alt="avatar")
        h2.nickname SimonAKing
        .social-links
          a.social-link(href="#", title="微信")
            span(style="position: relative; z-index: 1;") 💬
          a.social-link(href="mailto:hi@simonaking.com", title="邮箱")
            span(style="position: relative; z-index: 1;") 📧
          a.social-link(href="https://x.com/simon_aking", title="X")
            span(style="position: relative; z-index: 1;") 🐦
          a.social-link(href="https://github.com/SimonAKing", title="GitHub")
            span(style="position: relative; z-index: 1;") 💻
        
        .stats
          .stat-card
            .stat-value ∞
            .stat-label 微博
          .stat-card
            .stat-value 32
            .stat-label 文章
          .stat-card
            .stat-value ∞
            .stat-label 相册
      
      nav.nav-menu
        ul
          li.nav-item.active
            a.nav-link(href="#")
              span.nav-icon 🏠
              span 主页
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon 📷
              span 相册
          //- 添加了你在评论中提供的额外导航项
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon 📁
              span 归档
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon 🏷️
              span 标签
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon 😊
              span 微博
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon 💭
              span 思考
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon ✈️
              span 关于
          li.nav-item
            a.nav-link(href="#")
              span.nav-icon 🧭
              span 导航

    //- 主内容区
    main.main-content
      //- Hero 区域
      section.hero
        .hero-bg
          #stars.stars
        .hero-content
          h1.hero-title SimonAKing
          p.hero-subtitle STDIN | Think >> /dev/Mind✨

      //- 文章内容
      .content-wrapper
        .posts-grid
          if !articles || articles.length === 0
            p.no-article 暂无文章，请先同步 Notion 数据。
          else
            each article in articles
              if article.status === 'Published'
                article.post-card
                  h3.post-title
                    a(href=`/blog/${article.id}.html`) #{article.title}
                  .post-meta
                    span.meta-item
                      span.meta-icon 📅
                      | #{article.date}
                    //- 可扩展更多元数据
                  p.post-excerpt #{article.summary}
                  a.read-more(href=`/blog/${article.id}.html`) 阅读全文
                  if article.tags && article.tags.length
                    .post-tags
                      each tag in article.tags
                        a.tag(href=`/blog/tag/${tag}`)
                          span #{tag}

      //- 页脚
      footer.footer
        p © 2025 SimonAKing ❤️ 
          a(href="#") RSS Feed

    //- 遮罩层
    #overlay.overlay(onclick="toggleSidebar()")

    //- JavaScript 文件将在这里引入，例如：
    script(src="/js/blog.js")