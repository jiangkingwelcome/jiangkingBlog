      function createStars() {
        const starsContainers = document.querySelectorAll('.stars');
        if (!starsContainers.length) return;
        
        starsContainers.forEach(container => {
          const starCount = 50;
        
          for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.width = Math.random() * 3 + 'px';
            star.style.height = star.style.width;
            star.style.left = Math.random() * 100 + '%';
            star.style.top = Math.random() * 100 + '%';
            star.style.animationDelay = Math.random() * 3 + 's';
            container.appendChild(star);
          }
        });
      }

      // é¼ æ ‡è·Ÿéšå…‰æ•ˆ
      function setupCursorGlow() {
        const cursorGlow = document.getElementById('cursorGlow');
        if (!cursorGlow) return;
        
        let mouseX = 0, mouseY = 0;
        let currentX = 0, currentY = 0;

        document.addEventListener('mousemove', (e) => {
          mouseX = e.clientX;
          mouseY = e.clientY;
        });

        function animateCursor() {
          currentX += (mouseX - currentX) * 0.1;
          currentY += (mouseY - currentY) * 0.1;
          
          cursorGlow.style.left = currentX + 'px';
          cursorGlow.style.top = currentY + 'px';
          
          requestAnimationFrame(animateCursor);
        }
        animateCursor();
      }

      // åˆ†ç±»æ ‡ç­¾åˆ‡æ¢
      document.querySelectorAll('.category-tag').forEach(tag => {
        tag.addEventListener('click', function() {
          document.querySelectorAll('.category-tag').forEach(t => t.classList.remove('active'));
          this.classList.add('active');
          
          // ç­›é€‰æ–‡ç« é€»è¾‘
          const category = this.getAttribute('data-category') || this.textContent.trim();
          filterArticles(category);
        });
      });

      // æ–‡ç« ç­›é€‰å‡½æ•°
      function filterArticles(category) {
        const cards = document.querySelectorAll('.blog-card');
        
        cards.forEach(card => {
          // æ·»åŠ æ·¡å…¥æ·¡å‡ºæ•ˆæœ
          card.style.opacity = '0';
          card.style.transform = 'scale(0.95)';
          
          setTimeout(() => {
            if (category === 'å…¨éƒ¨' || card.getAttribute('data-category') === category) {
              card.style.display = 'block';
              card.style.opacity = '1';
              card.style.transform = 'scale(1)';
            } else {
              card.style.display = 'none';
            }
          }, 300);
        });
      }

      // åšå®¢å¡ç‰‡ç‚¹å‡»äº‹ä»¶
      document.querySelectorAll('.blog-card').forEach(card => {
        // æ·»åŠ é¼ æ ‡ç§»åŠ¨å…‰æ•ˆ
        card.addEventListener('mousemove', function(e) {
          const rect = this.getBoundingClientRect();
          const x = e.clientX - rect.left;
          const y = e.clientY - rect.top;
          
          // è®¡ç®—ç›¸å¯¹ä½ç½®(0-1)
          const relX = x / rect.width;
          const relY = y / rect.height;
          
          // åº”ç”¨3Då€¾æ–œæ•ˆæœ
          const rotateX = (relY - 0.5) * 5;
          const rotateY = (0.5 - relX) * 5;
          this.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.02)`;
        });
        
        card.addEventListener('mouseleave', function() {
          // é‡ç½®å˜æ¢
          this.style.transform = '';
        });
        
        card.addEventListener('click', function() {
          // æ·»åŠ ç‚¹å‡»åŠ¨ç”»
          this.style.transform = 'scale(0.98)';
          setTimeout(() => {
            const articleId = this.getAttribute('data-id');
            if (articleId) {
              window.location.href = `/blog/${articleId}.html`;
            }
          }, 200);
        });
      });

      // åŠ è½½æ›´å¤šæŒ‰é’®
      const loadMoreBtn = document.querySelector('.load-more-btn');
      if (loadMoreBtn) {
        let page = 1;
        loadMoreBtn.addEventListener('click', function() {
          this.textContent = 'åŠ è½½ä¸­...';
          
          // æ¨¡æ‹ŸåŠ è½½æ›´å¤šé€»è¾‘
          setTimeout(() => {
            this.textContent = 'åŠ è½½æ›´å¤šæ–‡ç« ';
            // å¦‚æœæ²¡æœ‰æ›´å¤šæ–‡ç« å¯åŠ è½½ï¼Œéšè—æŒ‰é’®
            if (page >= 3) {
              this.style.display = 'none';
            }
            page++;
          }, 1000);
        });
      }
      
