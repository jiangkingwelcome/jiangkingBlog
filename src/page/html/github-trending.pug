        color: rgba(255, 255, 255, 0.8);
      }
      
      .filter-select {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid rgba(99, 102, 241, 0.4);
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 14px;
        outline: none;
        transition: all 0.3s;
      }
      
      .filter-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
      }
      
      .filter-select option {
        background-color: #1a1a3e;
      }

      .search-input {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid rgba(99, 102, 241, 0.4);
        border-radius: 8px;
        padding: 8px 12px;
        padding-left: 35px;
        font-size: 14px;
        outline: none;
        transition: all 0.3s;
        width: 250px;
