          }

          .star-button {
              width: 100%;
              justify-content: center;
          }

          .repo-meta {
              flex-wrap: wrap;
          }

          .contributors img {
              width: 20px;
              height: 20px;
          }
      }

      /* è‡ªå®šä¹‰æ»šåŠ¨æ¡ */
      ::-webkit-scrollbar {
