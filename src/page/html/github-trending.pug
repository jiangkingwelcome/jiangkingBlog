      .search-input:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
      }
      
      .repo-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
        margin-top: 30px;
      }
      
      .repo-card {
        background: rgba(99, 102, 241, 0.08);
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 16px;
        padding: 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }
      
      .repo-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(99, 102, 241, 0.3);
        border-color: #6366f1;
      }
      
      .repo-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
      }
      
      .repo-language-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }
      
      .repo-title {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 12px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #fff;
      }
      
      .repo-title a {
        color: #fff;
        text-decoration: none;
        position: relative;
      }
      
      .repo-title a:after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        transition: width 0.3s;
      }
      
      .repo-title a:hover:after {
        width: 100%;
      }
      
      .repo-description {
        font-size: 14px;
        margin-bottom: 15px;
        height: 60px;
        overflow: hidden;
        text-overflow: ellipsis;
        color: rgba(255, 255, 255, 0.7);
      }
      
      .repo-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 15px;
      }
      
      .repo-meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        color: rgba(255, 255, 255, 0.7);
      }
      
      .repo-meta-icon {
        width: 16px;
        height: 16px;
        opacity: 0.8;
      }
      
      .repo-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 15px;
      }
      
      .repo-tag {
        background: rgba(99, 102, 241, 0.2);
        color: rgba(255, 255, 255, 0.9);
        border: 1px solid var(--primary);
        border-radius: 20px;
        font-size: 12px;
        padding: 3px 10px;
      }
      
      .repo-sparkline {
        height: 30px;
        margin-top: 15px;
        opacity: 0.7;
      }
      
      .trending-header {
        text-align: center;
        margin: 30px 0;
      }
      
      .trending-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        background: linear-gradient(45deg, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: glow 2s ease-in-out infinite alternate;
      }
      
      .trending-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.7);
      }

      .repo-owner-avatar {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        border: 2px solid var(--primary);
      }
      
      .loading-overlay {
        display: none;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(15, 15, 35, 0.7);
        backdrop-filter: blur(5px);
        z-index: 1000;
      }
      
      .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      
      .loading-spinner {
        width: 40px;
        height: 40px;
        border: 4px solid rgba(255, 255, 255, 0.1);
        border-left-color: var(--primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }
      
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

